  }
  .banner_content_content {
    width: 100%;
    display: flex;
    padding: 40px 20px 10px 20px !important;
  }
  .banner_content_content p {
    margin: 20px 80px 20px 80px !important;

    display: flex;
    justify-content: center;
    align-items: center;
    width: 100%;
  }
  .banner_content_button {
    bottom: -16px;
  }
  .products-grid-title {
    display: flex;
    justify-content: center;
    font-size: 2.3rem !important;
  }
  .products-grid {
    margin-top: 5rem;
  }
  .mobile_drawer {
    width: 100%;
    position: absolute;
    top: 0;
    left: 0;
    transform: translateY(-100%);
    {% comment %} transition: transform 0.5s ease-in-out; /* Use transform for animation */ {% endcomment %}
    background-color: #f2f2f2;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
  }

  .mobile_drawer.active {
    transform: translateY(0); /* Slide in the drawer */
  }
}


