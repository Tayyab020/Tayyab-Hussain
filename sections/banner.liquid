      class="banner_big-image_mobile" 
      src="{{ section.settings.banner_image_mobile| asset_url | default: 'https://cdn.shopify.com/s/files/1/0679/5110/0093/files/mobile-banner-updated.webp?v=1735565725' }}"
      alt="Banner Big Image"
    >
        <a href="#" class="banner_content_button">
          <div>
            {{ section.settings.banner_header_button_text }}
          </div>

          <img
            class="banner_content_button_icon_black"
            src="https://cdn.shopify.com/s/files/1/0679/5110/0093/files/Line_15.svg?v=1735485519"
            alt="Button Icon Black"
          >
          <img
            class="banner_content_button_icon_white"
            src="https://cdn.shopify.com/s/files/1/0679/5110/0093/files/Line_15_1.svg?v=1735485519"
