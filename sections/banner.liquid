    background-size: 200% 100%;
    background-position: right bottom;
    color: black;
    text-decoration: none;
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 10px 20px;
    font-size: 16px;
    transition: background-position 0.3s ease, color 0.3s ease;
    width: 200px;
    margin-top: 20px;
    margin-bottom: 30px;
    cursor: pointer;
  }

  .mobile_drawer_button:hover {
    background-position: left bottom;
    color: white;
  }
  .mobile_drawer_button_icon_white {
    display: none;
  }
  .mobile_drawer_button:hover .banner_header_button_icon_white {
    display: inline;
  }
  .mobile_drawer_button:hover .banner_header_button_icon_black {
    display: none;
  }
}
